---
import Layout from '../layouts/Layout.astro';
import Menu from '../components/Menu.astro';

---

<Layout title="Electric Cars, Solar & Clean Energy | Tesla">
	<main>
	<Menu />
		<section class="bg-black w-screen h-screen relative overflow-hidden">
			<div class="slides h-full">
				<div class="slide-1 h-full">
					<div class="slide-1__video h-full">
						<video class="absolute video object-center object-cover h-full w-full z-1" autoplay muted loop src="https://digitalassets.tesla.com/tesla-contents/video/upload/f_auto/Homepage-Model-Y-Promo-Desktop-v2.mp4" ></video>
					</div>
					<div class="text-white slide-1__content max-w-[40.625rem] z-3 pb-0 font-medium absolute top-[55%] left-12">
						<div class="slide-1__content-dots h-[0.75rem] absolute top-[-0.75rem]">
							<button id="1" class="bg-white w-3 h-3 rounded-full"></button>
							<button id="2" class="bg-white w-3 h-3 rounded-full"></button>
							<button id="3" class="bg-white w-3 h-3 rounded-full"></button>
						</div>
						<h1 class="text-[2.4rem] leading-[3rem] py-[2rem]">Model Y Starting at $37,490 After Federal Tax Credit</h1>
						<h2 class="text-[0.875rem]">
                            <p class="pb-[0.875rem] absolute top-[8.95rem]">Eligible buyers qualify for a $7,500 federal tax credit. Applied at time of Model Y delivery.
                                <a href="" class="underline underline-offset-[3px]">See Details</a>
                            </p>
                        </h2>
						<div class="text-[0.875rem] slide-1__content-buttons relative pt-[4.5rem]">
							<a href="" class="bg-white text-black inline-flex min-w-50 h-10 items-center justify-center rounded">Shop Available</a>
							<a href="" class="bg-[#222] text-white inline-flex min-w-50 h-10 items-center justify-center rounded absolute right-[14.5rem]">Demo Drive</a>
						</div>
				</div>

			</div>
		</section>
	</main>
</Layout>


