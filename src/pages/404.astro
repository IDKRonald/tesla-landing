---
import Layout from "../layouts/Layout.astro";

---

<Layout title="404">
    <div class="flex absolute top-0 left-0   m-4 px-4   py-2 text-black    bg-white rounded">
        <span class="material-symbols-outlined">
            arrow_back
            </span>
        <a href="/">Return</a>
    </div>
    
    <div class="flex flex-col justify-center items-center text-white"> 
        <span class="material-symbols-outlined text-[10rem] animate-spin-slow">
            settings
        </span>
        <h1 class="text-4xl font-extrabold">404</h1>
        <h2 class="text-2xl font-bold">Page Not Found</h2>
        <h3 class="text-xl font-medium">The page you are looking for does not exist.</h3>
    </div>
</Layout>